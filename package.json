{
  "name": "mood-music-player",
  "version": "1.0.0",
  "description": "Ein erweiterbarer Musik Player mit Mood-basierten Gruppen und OBS Integration",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never"
  },
  "author": "Streaming Code",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.0.0"
  },
  "dependencies": {
    "node-id3": "^0.2.6",
    "express": "^4.18.2",
    "body-parser": "^1.20.2",
    "multer": "^1.4.5-lts.1"
  },
  "optionalDependencies": {
    "fsevents": "*"
  },
  "build": {
    "appId": "com.streamingcode.moodmusic",
    "productName": "Mood Music Player",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "obs-overlay/**/*",
      "assets/**/*",
      "data/**/*",
      "main.js",
      "package.json",
      "!node_modules/**/*",
      "node_modules/node-id3/**/*",
      "node_modules/express/**/*",
      "node_modules/body-parser/**/*",
      "node_modules/multer/**/*",
      "node_modules/accepts/**/*",
      "node_modules/content-type/**/*",
      "node_modules/cookie/**/*",
      "node_modules/cookie-signature/**/*",
      "node_modules/debug/**/*",
      "node_modules/depd/**/*",
      "node_modules/destroy/**/*",
      "node_modules/encodeurl/**/*",
      "node_modules/escape-html/**/*",
      "node_modules/etag/**/*",
      "node_modules/finalhandler/**/*",
      "node_modules/fresh/**/*",
      "node_modules/http-errors/**/*",
      "node_modules/iconv-lite/**/*",
      "node_modules/inherits/**/*",
      "node_modules/media-typer/**/*",
      "node_modules/merge-descriptors/**/*",
      "node_modules/methods/**/*",
      "node_modules/mime/**/*",
      "node_modules/mime-types/**/*",
      "node_modules/ms/**/*",
      "node_modules/on-finished/**/*",
      "node_modules/parseurl/**/*",
      "node_modules/path-to-regexp/**/*",
      "node_modules/proxy-addr/**/*",
      "node_modules/qs/**/*",
      "node_modules/range-parser/**/*",
      "node_modules/raw-body/**/*",
      "node_modules/safe-buffer/**/*",
      "node_modules/send/**/*",
      "node_modules/serve-static/**/*",
      "node_modules/setprototypeof/**/*",
      "node_modules/statuses/**/*",
      "node_modules/type-is/**/*",
      "node_modules/utils-merge/**/*",
      "node_modules/vary/**/*",
      "node_modules/bytes/**/*"
    ],
    "extraResources": [
      {
        "from": "node_modules", 
        "to": "node_modules",
        "filter": ["node-id3/**/*", "express/**/*", "body-parser/**/*", "multer/**/*"]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
